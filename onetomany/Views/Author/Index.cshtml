@model IEnumerable<onetomany.Models.Author>

@{
    ViewData["Title"] = "Authors";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">
            <i class="fas fa-user-edit me-2"></i>Author Management
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Add New Author
        </a>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">
                <i class="fas fa-users me-2"></i>Author Directory
            </h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Country</th>
                            <th>Books</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="fw-bold">@Html.DisplayFor(modelItem => item.AuthorId)</td>
                                <td>
                                    <span class="fw-semibold">@Html.DisplayFor(modelItem => item.Name)</span>
                                </td>
                                <td>
                                    <span class="badge bg-info text-dark">
                                        @Html.DisplayFor(modelItem => item.Country)
                                    </span>
                                </td>
                                <td>
                                    @if (item.Books != null && item.Books.Any())
                                    {
                                        <div class="d-flex flex-wrap gap-1">
                                            @foreach (var book in item.Books)
                                            {
                                                <span class="badge bg-light text-dark border">
                                                    <i class="fas fa-book me-1"></i>@book.Title
                                                </span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning text-dark">No Books</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.AuthorId"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.AuthorId"
                                           class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.AuthorId"
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-light">
            <div class="text-muted">
                Showing @Model.Count() authors in directory
            </div>
        </div>
    </div>
</div>